{
  "name": "logux-status",
  "version": "0.1.0",
  "description": "Display Logux synchronization status in browser",
  "keywords": [
    "logux",
    "client"
  ],
  "author": "Andrey Sitnik <andrey@sitnik.ru>",
  "license": "MIT",
  "repository": "logux/logux-status",
  "dependencies": {
    "browser-supports-log-styles": "^1.1.7"
  },
  "devDependencies": {
    "docdash": "^0.4.0",
    "eslint": "^4.7.2",
    "eslint-config-logux": "^16.2.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-es5": "^1.1.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jest": "^21.1.0",
    "eslint-plugin-node": "^5.1.1",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-standard": "^3.0.1",
    "file-loader": "^0.11.2",
    "html-webpack-plugin": "^2.30.1",
    "jest": "^21.1.0",
    "jsdoc": "^3.5.5",
    "json-loader": "^0.5.7",
    "lint-staged": "^4.2.2",
    "logux-client": "^0.2.0",
    "logux-core": "^0.2.0",
    "logux-sync": "^0.2.0",
    "pre-commit": "^1.2.2",
    "rimraf": "^2.6.2",
    "script-ext-html-webpack-plugin": "^1.8.5",
    "size-limit": "^0.11.4",
    "svgo": "^0.7.2",
    "url-loader": "^0.5.9",
    "webpack": "^3.6.0",
    "webpack-dev-server": "^2.8.2",
    "yaspeller-ci": "^0.7.0"
  },
  "scripts": {
    "lint-staged": "lint-staged",
    "yaspeller": "yaspeller-ci *.md docs/*.html test/demo/*.html",
    "spellcheck": "yarn docs && yarn yaspeller",
    "clean": "rimraf docs/ coverage/ test/demo/build/",
    "lint": "eslint *.js test/{**/,}*.js",
    "docs": "jsdoc --configure .jsdocrc *.js",
    "test": "jest --coverage && yarn lint && size-limit && yarn spellcheck",
    "demo": "webpack-dev-server --config test/demo/webpack.config",
    "build": "webpack --config test/demo/webpack.config -p",
    "imgmin": "svgo -f badge"
  },
  "size-limit": [
    {
      "path": [
        "index.js",
        "badge/en.js",
        "badge/default.js"
      ],
      "limit": "2.7KB"
    }
  ],
  "jest": {
    "coverageThreshold": {
      "global": {
        "statements": 100
      }
    },
    "moduleNameMapper": {
      ".*\\.svg$": "<rootDir>/test/image.js"
    }
  },
  "eslintConfig": {
    "extends": "eslint-config-logux/browser"
  },
  "lint-staged": {
    "*.svg": [
      "imgmin",
      "git add"
    ],
    "*.md": "yaspeller-ci",
    "*.js": "eslint"
  },
  "pre-commit": [
    "lint-staged"
  ]
}
